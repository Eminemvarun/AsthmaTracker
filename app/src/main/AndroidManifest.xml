<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/newicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/newicon_round"
        android:theme="@style/Theme.TestApplication">
        <activity
            android:name="com.envy.asthmatracker.LatestResearch"
            android:exported="false"
            android:label="Latest Articles"
            android:theme="@style/Theme.AppCompat.DayNight"
            />
        <activity
            android:name="com.envy.asthmatracker.InhalerActivity"
            android:exported="false"
            android:label="@string/title_activity_inhaler"
            android:theme="@style/Theme.AppCompat.DayNight" />
        <activity
            android:name="com.envy.asthmatracker.addExaberActivity"
            android:exported="false"
            android:label="Add Exaberation"
            android:theme="@style/Theme.AppCompat.DayNight">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.envy.asthmatracker.ExaberationsActivity" />
        </activity>
        <activity
            android:name="com.envy.asthmatracker.addInhalerActivity"
            android:exported="false"
            android:label="Add Exaberation"
            android:theme="@style/Theme.AppCompat.DayNight">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.envy.asthmatracker.InhalerActivity" />
        </activity>
        <activity
            android:name="com.envy.asthmatracker.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TestApplication.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.envy.asthmatracker.ExaberationsActivity"
            android:exported="false"
            android:label="Exaberations"
            android:theme="@style/Theme.AppCompat.DayNight" />
    </application>

</manifest>